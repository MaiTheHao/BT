<div id="webLoginBody" class="under-header">
  <div id="loginTable">
    <div id="tableHeading">
      <h1>TÀI KHOẢN</h1>
    </div>
    <form id="tableBody" method="post" action="/">
      <div class="tableBody__part" id="tableBodyTop">

        <label for="email" class="tableBody__part__element">
          <i class="fa-solid fa-user" style="color: black;"></i>
          <input type="text" placeholder="Tài khoản" id="email" name="tk" />
        </label>

        <label for="password" class="tableBody__part__element">
          <i class="fa-solid fa-lock" style="color: black;"></i>
          <input
            type="password"
            placeholder="Mật khẩu"
            id="password"
            name="mk"
          />
        </label>

      </div>
      <div class="tableBody__part" id="tableBodyBottom">
        <button
          type="submit"
          class="tableBody__part__element"
          id="loginButton"
        >Đăng nhập</button>
        <p class="tableBody__part__element" id="loginNote">Nếu chưa hoặc quên
          tài khoản, xin vui lòng liên hệ giáo viên.</p>
      </div>
    </form>
  </div>
</div>
<script>
  $(document).ready(function(){ $("#loginForm").submit(function(e){
  e.preventDefault(); var tk = $("#email").val(); var mk = $("#password").val();
  $.ajax({ url: "/", type: "POST", data: {tk: tk, mk: mk}, success:
  function(response){ $('body').html(response); }, error: function(jqXHR,
  textStatus, errorThrown){ console.log(textStatus, errorThrown); } }); }); });
</script>
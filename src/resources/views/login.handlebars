<div id="webLoginBody" class="under-header">
  <div id="loginTable">
    <div id="tableHeading">
      <h1>TÀI KHOẢN</h1>
    </div>
    <form id="tableBody" method="post" action="/">
      <div class="tableBody__part" id="tableBodyTop">
        <div class="tableBody__part__element">
          <i class="fa-solid fa-user" style="color: black;"></i>
          <input
            name="tkad"
            type="text"
            placeholder="nhập mã admin vào đây (nếu có)"
            id="email"
          />
        </div>

        <div class="tableBody__part__element">
          <i class="fa-solid fa-user" style="color: black;"></i>
          <input
            name="tk"
            type="text"
            placeholder="nhập mã tài khoảng"
            id="email"
          />
        </div>

        <div class="tableBody__part__element">
          <i class="fa-solid fa-lock" style="color: black;"></i>
          <input
            name="mk"
            type="password"
            placeholder="nhập mật khẩu"
            id="password"
          />
        </div>

      </div>
      <div class="tableBody__part" id="tableBodyBottom">
        <button
          type="submit"
          class="tableBody__part__element"
          id="loginButton"
        >Đăng nhập</button>
        <p class="tableBody__part__element" id="loginNote">Nếu chưa hoặc quên
          tài khoản, xin vui lòng liên hệ giáo viên.</p>
      </div>
    </form>
  </div>

  {{! <form action="/" method="post">
    <label for="tk">First name:</label><br />
    <input type="text" id="fname" name="tk" /><br />
    <label for="mk">Last name:</label><br />
    <input type="text" id="lname" name="mk" /><br /><br />
    <input type="submit" value="Submit" />
  </form> }}
  <script>
    if ({{b}}) { alert("Đăng nhập thất bại"); }
  </script>
</div>